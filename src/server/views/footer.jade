div(class='modal fade', id='settingsModal', ng-controller='SettingsCtrl')
    div.modal-dialog
        div.modal-content
            div.modal-header
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true')
                        |&times;
                h4.modal-title
                    |Application Settings
            div.modal-body
                p
                    |API URL:
                    input.form-control(ng-model='apiBox', type='search')
            div.modal-footer
                button(type='button' class='btn btn-danger pull-left' data-dismiss='modal' ng-click='resetAPI()')
                    |Reset to default
                button(type='button' class='btn btn-default' data-dismiss='modal' ng-click='clearAPIBox()')
                    |Cancel
                button(type='button' class='btn btn-primary' data-dismiss='modal' ng-click='saveAPI()')
                    |Save Changes
